<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">    
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/black" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/nnm_button_end" android:startColor="@color/nnm_button_dark" />
                    <stroke android:width="2dp" android:color="@color/yellow" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>               
            </item>
         </layer-list>
     </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/gray" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/nnm_button_dark" android:startColor="@color/nnm_button_end" />
                    <stroke android:width="2dp" android:color="@color/nnm_button_dark" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>               
            </item>
         </layer-list>
     </item>
    <item>
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/gray" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/nnm_button_dark" android:startColor="@color/nnm_button_end" />
                    <stroke android:width="2dp" android:color="@color/nnm_button_dark" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>               
            </item>
         </layer-list>
     </item>
</selector>
