<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/nnm_button_light"
                android:endColor="@color/nnm_button_light"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="@color/yellow"/>
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/nnm_button_light"
                android:endColor="@color/nnm_button_light"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="@color/nnm_button_stroke" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:startColor="@color/nnm_button_light"
                android:endColor="@color/nnm_button_light"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="@color/nnm_button_stroke" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
