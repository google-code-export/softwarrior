<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/yellow"
                android:endColor="@android:color/black"                
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="@color/yellow"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@android:color/black"
                android:endColor="@android:color/black"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/dgray" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:startColor="@color/gray"
                android:endColor="@android:color/black"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/dgray" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
