<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/background_land"
    android:layout_height="fill_parent">    
	<ScrollView android:id="@+id/sv_info" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="5dip"
		android:scrollbars="vertical" android:fadingEdge="vertical"
		android:gravity="top">
		<LinearLayout android:id="@+id/ll_info" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<ImageView android:id="@+id/i_logo" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingBottom="15sp"
				android:layout_marginTop="10dip"
				android:scaleType="centerInside"
				android:adjustViewBounds="true"/>
			<TextView 
				android:id="@+id/t_program_name_and_version" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:paddingBottom="15sp" 
				android:gravity="center" 
				android:textColor="@color/gold" 
				android:textStyle="bold" 
				android:textSize="20sp"/>
			<TextView 
				android:id="@+id/t_comments" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:paddingBottom="15sp"
				style="@android:style/TextAppearance.Medium" 
				android:autoLink="all"
				android:gravity="center"/>
			<TextView 
				android:id="@+id/t_website" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:paddingBottom="15sp"
				style="@android:style/TextAppearance.Medium" 
				android:gravity="center"/>		
			<TextView 
				android:id="@+id/t_copyright" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:paddingBottom="15sp"
				android:gravity="center" 
				android:autoLink="web|email|map"
				style="@android:style/TextAppearance.Small"/>		
			<LinearLayout 
				android:id="@+id/ll_email" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_marginBottom="15dip">			
			<ImageView 
				android:id="@+id/i_email" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dip"
				android:scaleType="centerInside"
				android:adjustViewBounds="true"/>
			<TextView 
				android:id="@+id/t_email" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				style="@android:style/TextAppearance.Medium" 
				android:gravity="center" 
				android:linksClickable="true" 
				android:selectAllOnFocus="true"
				android:autoLink="all"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
    <ScrollView 
    	android:id="@+id/sv_credits" 
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:padding="5dip"
		android:scrollbars="vertical" 
		android:fadingEdge="vertical"
		android:gravity="top">
		<LinearLayout 
			android:id="@+id/ll_credits" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:orientation="vertical">
			<TextView 
				android:id="@+id/l_authors"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/l_authors"/>
			<TextView 
				android:id="@+id/et_authors"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="all" 
				android:layout_marginBottom="15dip"/>		
			<TextView 
				android:id="@+id/l_documenters"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/l_documenters"/>
			<TextView 
				android:id="@+id/et_documenters"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="all" 
				android:layout_marginBottom="15dip"/>
			<TextView 
				android:id="@+id/l_translators"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/l_translators"/>
			<TextView 
				android:id="@+id/et_translators"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="all" 
				android:layout_marginBottom="15dip"/>
			<TextView 
				android:id="@+id/l_artists"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/l_artists"/>
			<TextView 
				android:id="@+id/et_artists"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="all" 
				android:layout_marginBottom="15dip"/>	
			<TextView 
				android:id="@+id/tv_no_information"
				android:text="@string/no_information_available"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:visibility="gone"/>	
		</LinearLayout>
	</ScrollView>    
	<ScrollView 
		android:id="@+id/sv_license" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:padding="5dip" 
		android:fadingEdge="vertical">
		<TextView 
			android:id="@+id/et_license"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:autoLink="web|email|map"
			android:paddingBottom="20dip"/>
	</ScrollView>
</FrameLayout>