<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.softwarrior.rutrackerdownloader"
      android:versionCode="1" android:versionName="1.0.0.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:name="RutrackerDownloaderApp">        
        <activity android:name="SplashScreen" android:screenOrientation="portrait" android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
        <!-- AdMobActivity definition -->
        <activity android:name="com.admob.android.ads.AdMobActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:configChanges="orientation|keyboard|keyboardHidden">
        </activity>               
        <activity android:name="PreferencesTabs" android:theme="@android:style/Theme.Light"></activity>
        <activity android:name="WEBPreferencesScreen" android:theme="@android:style/Theme.Light"></activity>
        <activity android:name="RSSPreferencesScreen" android:theme="@android:style/Theme.Light"></activity>
        <activity android:name="DownloadPreferencesScreen" android:theme="@android:style/Theme.Light"></activity>       
        <activity android:name="com.softwarrior.web.TorrentWebClient" android:theme="@android:style/Theme.Light"></activity>
        <activity android:name="com.softwarrior.rss.MessageList" android:theme="@android:style/Theme.Light"></activity>     
        <activity android:name="DownloadService$Controller"
                android:theme="@android:style/Theme.Light"
                android:label="@string/activity_service_controller"
                android:launchMode="singleTop" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.softwarrior.file.FileManagerActivity" android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="com.softwarrior.file.SET_DIRECTORY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.file.PICK_FILE"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.file.PICK_FILE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.file.PICK_DIRECTORY"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.file.PICK_DIRECTORY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.file.GET_CONTENT" />
                <data android:mimeType="*/*" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>        
        </activity>
        <activity android:label="@string/about_activity_name"
                android:name="com.softwarrior.about.About"
                android:theme="@android:style/Theme.Light">
                <!-- android:launchMode="singleTop" android:screenOrientation="sensor" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.softwarrior.about.action.SHOW_ABOUT_DIALOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/help_activity_name"
                  android:name="com.softwarrior.about.Help"
                  android:theme="@android:style/Theme.Light">
        </activity>  
        <activity android:name="com.softwarrior.about.Advertising"></activity>      
        <service android:name="DownloadService"></service>
        <receiver android:name="com.google.android.apps.analytics.AnalyticsReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
                
        <meta-data android:name="com.softwarrior.about.metadata.COMMENTS"
                       android:value="@string/about_comments" />
        <meta-data android:name="com.softwarrior.about.metadata.COPYRIGHT"
                       android:value="@string/about_copyright" />
        <meta-data android:name="com.softwarrior.about.metadata.AUTHORS"
                       android:resource="@array/about_authors" />
        <meta-data android:name="com.softwarrior.about.metadata.DOCUMENTERS"
                       android:resource="@array/about_documenters" />
        <meta-data android:name="com.softwarrior.about.metadata.TRANSLATORS"
                       android:resource="@array/about_translators" />
        <meta-data android:name="com.softwarrior.about.metadata.ARTISTS"
                       android:resource="@array/about_artists" />
        <meta-data android:name="com.softwarrior.about.metadata.WEBSITE_LABEL"
                       android:value="@string/about_website_label" />
        <meta-data android:name="com.softwarrior.about.metadata.WEBSITE_URL"
                       android:value="@string/about_website_url" />
        <meta-data android:name="com.softwarrior.about.metadata.LICENSE" android:resource="@raw/license_short"/>
        <meta-data android:name="com.softwarrior.about.metadata.EMAIL"
                       android:value="@string/about_email" />
        <!-- The application's publisher ID assigned by AdMob -->
        <meta-data android:value="a14d5a500187b19" android:name="ADMOB_PUBLISHER_ID" />
        <!-- use a separate publisher id here to aid in tracking intersitial statistics -->
        <meta-data android:value="a14d5a500187b19" android:name="ADMOB_INTERSTITIAL_PUBLISHER_ID" />
        <meta-data android:value="false" android:name="ADMOB_ALLOW_LOCATION_FOR_ADS"/>        

</application>
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />  
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />              
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />    
</manifest> 