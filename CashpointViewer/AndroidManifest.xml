<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1" 
          android:versionName="1.0.0.0" 
          package="com.softwarrior.cashpointviewer">
    <application 
        android:icon="@drawable/app" 
        android:name="CashpointViewerApp" 
        android:debuggable="true" 
        android:label="@string/app_label" 
        android:description="@string/app_desc">
        <activity 
            android:screenOrientation="portrait" android:name="LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.softwarrior.cashpointviewer.CashpointActivity"></activity>
        <activity android:name="com.softwarrior.cashpointviewer.ChooseLayersActivity"></activity>
        <activity android:name="com.softwarrior.cashpointviewer.PlacemarkActivity"></activity>
        <activity android:name="com.softwarrior.cashpointviewer.PlanActivity"></activity>
        <activity android:name="com.softwarrior.cashpointviewer.SettingsActivity"></activity>
        <activity android:name="com.softwarrior.cashpointviewer.AudioPlayerActivity"></activity>
        <activity android:name="AboutActivity"></activity>
        <receiver android:enabled="true" android:name="SDCardBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_MOUNTED"/>
                <data android:scheme="file"></data>
            </intent-filter>
        </receiver>
        <uses-library android:name="com.google.android.maps"></uses-library>
    </application>    
    <uses-sdk android:minSdkVersion="7"/>
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"></uses-permission>
</manifest> 