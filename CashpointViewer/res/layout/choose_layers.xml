<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/LinearLayoutLayers">


<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/available_layers" android:textSize="10pt" android:layout_gravity="center_horizontal" android:paddingBottom="5pt" android:paddingTop="5pt"></TextView>
<View android:layout_width="wrap_content" android:layout_height="2pt" android:background="#FF909090" android:id="@+id/SeparatorBegin"></View><TextView android:layout_height="wrap_content" android:gravity="center_horizontal" android:layout_width="fill_parent" android:id="@+id/TextViewNoLayersFound" android:text="@string/no_layers_found" android:textSize="18sp"></TextView><View android:layout_width="wrap_content" android:layout_height="2pt" android:background="#FF909090" android:id="@+id/SeparatorEnd"></View>
<Button android:layout_width="wrap_content" android:id="@+id/ButtonOK" android:text="OK" android:minWidth="40pt" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10pt"></Button>

</LinearLayout>
